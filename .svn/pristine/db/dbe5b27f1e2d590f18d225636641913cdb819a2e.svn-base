  <div class="hit-det">
    <div class="hit-bg">
      <div class="result">
          <h1>{{detailsObj.score}}分</h1>
          <h4>本次测试成绩</h4>
      </div>
      <div class="hit-percent">
         <div>
          <h1>{{detailsObj.errorCount}}道</h1>
          <h4>错误题数</h4>
         </div>
         <div>
          <h1>{{detailsObj.rightCount}}道</h1>
          <h4>正确题数</h4>
         </div>
         <div>
          <h1>{{detailsObj.examTime}}min</h1>
          <h4>考试用时</h4>
         </div>
      </div>
    </div>
  </div>
</template>
<script>
import {historyDetail} from '@/api'
export default {
  name: 'historyDetail',
  data () {
    return {
      detailsObj: {}
    }
  },
  created () {
    this.getDetails()
  },
  methods: {
    getDetails () {
      historyDetail({id: this.$route.query.id}).then(res => {
        if (res.data) {
          this.detailsObj = res.data
        }
      })
    }
  }
}
</script>
